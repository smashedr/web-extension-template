{
  "manifest_version": 3,
  "version": "0.0.1",
  "default_locale": "en",
  "name": "__MSG_appName__",
  "description": "__MSG_appDesc__",
  "homepage_url": "https://github.com/cssnr",
  "author": "Shane",
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+Shift+X"
      },
      "description": "Show Popup"
    },
    "inject-alert": {
      "suggested_key": {
        "default": "Ctrl+Shift+F"
      },
      "description": "Inject Alert"
    }
  },
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus",
    "notifications",
    "scripting",
    "storage"
  ],
  "background": {
    "type": "module"
  },
  "options_ui": {
    "page": "html/options.html",
    "open_in_tab": true
  },
  "action": {
    "default_title": "__MSG_appName__",
    "default_popup": "html/popup.html",
    "default_icon": {
      "16": "images/logo16.png",
      "32": "images/logo32.png",
      "48": "images/logo48.png",
      "96": "images/logo96.png",
      "128": "images/logo128.png"
    }
  },
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "96": "images/logo96.png",
    "128": "images/logo128.png"
  }
}
